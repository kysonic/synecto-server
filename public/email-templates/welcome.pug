extends ./public/email-templates/default.pug
block content
   .wrapper(style="color: #626262; text-align:left;font-weight: 300; padding: 30px;")
      .title(style="margin: 0 0; font-size: 30px; font-weight: 600;")= title
      .message(style="margin-bottom: 20px;font-size:18px; margin-top: 10px;")= message
      ol.tiles(style="margin:0; padding: 18px; padding-bottom:18px")
         li(style="margin-top: 0px")= welcomeTileOne
         li(style="margin-top: 15px")= welcomeTileTwo
         li(style="margin-top: 15px")= welcomeTileThree
      if(token)
        a(href=token,style="display: block; width: 160px;background: #6EBAF9; text-decoration: none; color: #fff; margin: 30px 0; padding: 10px 15px;")= welcomeTileFour
